}

static inline uint16_t next16(State *self) {
  uint8_t lo = next8(self);
  uint8_t hi = next8(self);
  return JOIN(hi, lo);
}

static inline uint16_t pop(State *self) {
  uint8_t lo = read8(self->bus, SP++, true, true);
  uint8_t hi = read8(self->bus, SP++, true, true);
  return JOIN(hi, lo);
}

