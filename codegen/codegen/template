void backendTick(Backend *self) {
  self->state.opcode = next8(&self->state);
  if (self->state.opcode == 0xCB) {
    uint8_t next = next8(&self->state);
    self->PREFIXED[next](&self->state);
    
  } else {
  self->UNPREFIXED[self->state.opcode](&self->state);
  }
}
